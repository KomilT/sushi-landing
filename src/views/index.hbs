{{#extend "layout/main"}}
{{#content "body"}}
<section class="products">
  <div class="container">
    <h2 class="products__title">
      What do you like to order?
    </h2>

    <div class="selector products__selector">
      <ul class="selector__list">
        {{#each selector.items}}

        {{#if this.active}}
        <li class="selector__item selector__item_active">
          {{else}}
        <li class="selector__item">
          {{/if}}

          <button href="#" class="selector__button">
            <svg class="selector__icon">
              <use href="{{this.icon}}"></use>
            </svg>
            <span class="selector__name">
              {{this.name}}
            </span>
          </button>
        </li>
        {{/each}}
      </ul>
    </div>

    <div class="assortment">
      <div class="swiper-container">
        <div class="swiper-wrapper">
          {{#each assortment}}
          <div class="swiper-slide">
            <div class="assortment__item">
              <div class="assortment__image">
                <img src="{{this.image}}" alt="" />
              </div>
              <h3 class="assortment__name">
                {{this.name}}
              </h3>
              <span>
                {{this.pieces}} pieces
              </span>
              <p class="assortment__description">
                {{this.description}}
              </p>
              <span class="assortment__price">
                Â£{{this.price}}
              </span>
              <button class="assortment__button">Add to cart</button>
            </div>
          </div>
          {{/each}}
        </div>
      </div>

      <div class="assortment__navigation">
        <div class="slider-button-prev">
          <svg>
            <use href="/assets/icons.svg#arrow-left"></use>
          </svg>
        </div>
        <div class="slider-button-next">
          <svg>
            <use href="/assets/icons.svg#arrow-right"></use>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="about">
  <div class="about__invitation">
    <p>
      Our
      <strong>
        clients loves
      </strong>
      our
      <strong>
        sushi
      </strong>
      <br />
      and
      <strong>
        not only
      </strong>
    </p>
    <p>
      Be our next happy client
      <br />
      First orders
      <strong>
        10% off
      </strong>
    </p>
  </div>
  <div class="reviews">
    <ul class="reviews__list">
      {{#each reviews}}
      <li class="reviews__item">
        <div class="reviews__content">
          <p class="reviews__text">
            {{this.text}}
          </p>
          <div class="reviews__info">
            <span class="reviews__author">
              {{this.author}}
            </span>
            <span class="reviews__date">
              Reviewed {{this.date}}
            </span>
          </div>
        </div>
        <div class="reviews__avatar">
          <img src="{{this.avatar}}" alt="" />
        </div>
      </li>
      {{/each}}
    </ul>
    <a href="#">
      <img src="/assets/img/tripadvisor.png" alt="" />
    </a>
  </div>
  <div class="instagram">
    <p>
      Check our profile on
    </p>
    <h2>
      Instagram
    </h2>
    <ul class="instagram__list">
      {{#each instagram.photos}}
      <li class="instagram__item">
        <a href="#">
          <img src="{{this.url}}" alt="" />
        </a>
      </li>
      {{/each}}
    </ul>
  </div>
  <div class="about__info">
    <h2>
      About us
    </h2>
